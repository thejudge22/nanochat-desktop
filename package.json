{
  "name": "nanochat-desktop",
  "version": "0.2.0",
  "description": "Desktop client for NanoChat",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:appimage": "APPIMAGE_EXTRACT_AND_RUN=1 NO_STRIP=1 tauri build --bundles appimage",
    "git:push": "git push origin $(git rev-parse --abbrev-ref HEAD)",
    "git:push:tags": "git push origin --tags",
    "pr": "gh pr create --fill",
    "pr:view": "gh pr view --web",
    "release": "bash scripts/release.sh",
    "release:publish": "bash scripts/release.sh --publish",
    "release:view": "gh release view --web",
    "issues": "gh issue list",
    "issue:create": "gh issue create",
    "issue:view": "gh issue view"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tauri-apps/api": "^2.1.0",
    "@tauri-apps/cli": "^2.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-http": "^2.5.5"
  }
}
